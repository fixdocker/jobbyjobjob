<div class='container'>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Settings</h3></div>
        <div class="panel-body">
          <%= form_for(user, url: update_user_settings_path, html: { class:'form-horizontal', role:'form' }) do |f| %>
          <% if user.errors.any? %>
            <div class="alert alert-danger" id="error_explanation">
              <strong><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</strong>
              <ul>
                <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :first_name, class:'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.text_field :first_name, class:'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :last_name, class:'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.text_field :last_name, class:'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :address, class:'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.text_field :address, class:'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :city, class:'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.text_field :city, class:'form-control', autocomplete:"off" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :state, class:'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.text_field :state, class:'form-control', autocomplete:"off" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :zip, class:'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.number_field :zip, class:'form-control', autocomplete:"off" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :phone_number, class:'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.text_field :phone_number, class:'form-control', autocomplete:"off" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :website, class:'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.text_field :website, class:'form-control', autocomplete:"off" %>
            </div>
          </div>
          <% unless params[:action] == "new" || params[:action] == "create" %>
            <div class="form-group">
              <%= f.label :password, class:'col-md-2 control-label' %>
              <div class="col-md-10">
                <%= f.password_field :password, class:'form-control', autocomplete:"off"  %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label "Password Confirmation", class:'col-md-2 control-label' %>
              <div class="col-md-10">
                <%= f.password_field :password_confirmation, class:'form-control', autocomplete:"off"  %>
              </div>
            </div>
          <% end %>
          <div class="form-group m-b-0">
            <div class="col-sm-offset-2 col-sm-9">
              <%= f.submit "Update Settings", class:'btn btn-primary' %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
